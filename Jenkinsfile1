pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node23'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main', url: 'https://github.com/98anjanakm/Book-My-Show.git'

                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh '''
                    $SCANNER_HOME/bin/sonar-scanner \
                    -Dsonar.projectName=BMS \
                    -Dsonar.projectKey=BMS \
                    -Dsonar.sources=. \
                    -Dsonar.language=js
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    waitForQualityGate abortPipeline: false, credentialsId: 'Sonar-token'
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                echo "Checking workspace..."
                ls -la

                if [ -f package.json ]; then
                    echo "Installing Node dependencies..."
                    rm -rf node_modules package-lock.json
                    npm install
                else
                    echo "ERROR: package.json not found!"
                    exit 1
                fi
                '''
            }
        }

        stage('OWASP Dependency Scan') {
            steps {
                dependencyCheck additionalArguments: '''
                    --scan . 
                    --disableYarnAudit 
                    --disableNodeAudit
                ''',
                odcInstallation: 'DP-Check'

                dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
            }
        }

        stage('Trivy File System Scan') {
            steps {
                sh '''
                trivy fs . > trivyfs.txt
                '''
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                        sh '''
                        echo "Building Docker image..."
                        docker build --no-cache -t kastrov/bms:latest .

                        echo "Pushing Docker image..."
                        docker push kastrov/bms:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to Container') {
            steps {
                sh '''
                echo "Stopping old container if exists..."
                docker stop bms || true
                docker rm bms || true

                echo "Running new container..."
                docker run -d \
                  --restart=always \
                  --name bms \
                  -p 3000:3000 \
                  kastrov/bms:latest

                echo "Running containers:"
                docker ps -a

                echo "Waiting for app startup..."
                sleep 5
                docker logs bms
                '''
            }
        }
    }

    post {
        always {
            emailext(
                attachLog: true,
                subject: "Build ${currentBuild.result} - ${env.JOB_NAME}",
                body: """
                Project: ${env.JOB_NAME}<br/>
                Build Number: ${env.BUILD_NUMBER}<br/>
                Build URL: ${env.BUILD_URL}<br/>
                """,
                to: '98anjanakm@gmail.com',
                attachmentsPattern: 'trivyfs.txt'
            )
        }
    }
}
