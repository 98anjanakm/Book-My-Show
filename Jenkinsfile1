pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node18'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        IMAGE_NAME = 'kastrov/bms'
    }

    stages {

        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/98anjanakm/Book-My-Show.git'
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-server') {
                    sh '''
                    cd bookmyshow-app
                    $SCANNER_HOME/bin/sonar-scanner \
                      -Dsonar.projectKey=BMS \
                      -Dsonar.projectName=BMS \
                      -Dsonar.sources=src
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: false
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                cd bookmyshow-app
                npm ci
                '''
            }
        }

        stage('OWASP Dependency Scan') {
            steps {
                dir('bookmyshow-app') {
                    dependencyCheck additionalArguments: '''
                        --scan .
                        --disableNodeAudit
                        --disableYarnAudit
                        --disableNvdUpdate
                    ''',
                    odcInstallation: 'DP-Check'

                    dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
                }
            }
        }

        stage('Trivy File System Scan') {
            steps {
                sh '''
                cd bookmyshow-app
                trivy fs . --severity HIGH,CRITICAL --no-progress || true
                '''
            }
        }

        stage('Docker Build & Push') {
            steps {
                dir('bookmyshow-app') {
                    withDockerRegistry(credentialsId: 'docker', toolName: 'docker') {
                        sh '''
                        docker build -t $IMAGE_NAME:latest .
                        docker push $IMAGE_NAME:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy Container') {
            steps {
                sh '''
                docker stop bms || true
                docker rm bms || true

                docker run -d \
                  --name bms \
                  -p 3000:3000 \
                  --restart always \
                  kastrov/bms:latest
                '''
            }
        }
    }

    post {
        always {
            emailext(
                subject: "Build ${currentBuild.result}: ${env.JOB_NAME}",
                body: """
                Job: ${env.JOB_NAME}<br/>
                Build: ${env.BUILD_NUMBER}<br/>
                URL: ${env.BUILD_URL}
                """,
                to: '98anjanakm@gmail.com'
            )
        }
    }
}
